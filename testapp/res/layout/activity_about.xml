<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD2B2"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:scaleType="centerCrop"
        android:src="@drawable/instruction_image" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="20dp"
        android:layout_weight="0.50"
        android:gravity="center_horizontal"
        android:text="Welcome to Schedulr!\n\nIf you&apos;re a first time user, here are the steps\n you will need to take to get started:\n\n1. On your laptop or mobile phone, go to \nStudent Link > Academics >\n Current Schedule > Graph\n(Make sure it&apos;s in &quot;Desktop Mode&quot;)\n2. Save the image of your schedule\n(On mobile press and hold the schedule to save)\n3. If you&apos;re on computer, transfer the image to \nyour mobile phone, via email or SMS etc.\n\nYou are now ready to use Schedulr!"
        android:textSize="15dp" />

</RelativeLayout>